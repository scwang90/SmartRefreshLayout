<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_common">

    <ImageView
        android:id="@+id/lmi_avatar"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/padding_common"
        android:layout_marginRight="@dimen/padding_common"
        android:contentDescription="@string/app_name"
        tools:background="#fff0f0f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView style="@style/AppTheme.Label.Title"
            android:id="@+id/lmi_title"
            android:minWidth="200dp"
            android:layout_marginTop="@dimen/padding_common_d"
            tools:background="#fff0f0f0"/>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/lmi_grade"
            android:minWidth="50dp"
            android:layout_marginTop="@dimen/padding_common_d"
            android:textColor="@android:color/holo_orange_dark"
            tools:background="#fff0f0f0"/>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/lmi_describe"
            android:minWidth="100dp"
            android:layout_marginTop="@dimen/padding_common_d"
            tools:background="#fff0f0f0"/>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/lmi_actor"
            android:minWidth="100dp"
            android:layout_marginTop="@dimen/padding_common_d"
            tools:background="#fff0f0f0"/>
    </LinearLayout>

</LinearLayout>

